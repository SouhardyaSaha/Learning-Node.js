extends layout

block content
    h1 #{title}

    form(method='post', action='/users/register')
        .form-group
            label Name:
            input.form-control(name= 'name', type='text', )
        
        .form-group
            label Username:
            input.form-control(name= 'username', type='text' required)
        
        .form-group
            label Email:
            input.form-control(name= 'email', type='email' required)

        .form-group
            label Password:
            input.form-control(name= 'password', type='password' required)
        
        .form-group
            label Confirm Password:
            input.form-control(name= 'password2', type='password' required)

        br
        .form-group
            input.btn.btn-primary(type='submit', value='submit')