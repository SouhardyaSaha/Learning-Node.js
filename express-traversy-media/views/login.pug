extends layout

block content
    h1 #{title}

    form(method='post', action='/users/login')
        
        .form-group
            label Username:
            input.form-control(name= 'username', type='text' required)

        .form-group
            label Password:
            input.form-control(name= 'password', type='password' required)

        br
        .form-group
            input.btn.btn-primary(type='submit', value='submit')